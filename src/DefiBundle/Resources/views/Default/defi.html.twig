{% block stylesheets %}
    <!-- Appel de bibliothèques CSS, Bootstrap, jQuery etc... -->
    <link rel="stylesheet" href="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.3.js" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ asset('bundles/defi/css/font-awesome.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/defi/css/bootstrap.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/defi/css/bootsrap-theme.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/defi/css/stylesheet.css') }}" type="text/css" />
{% endblock %}

{% block body %}

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Affichage du burger -->
    <div class="mobilenav">
        <li><a href="#"><i class="fa fa-home"></i>&nbsp; Accueil</a></li>
        <li><a href="#"><i class="fa fa-user"></i></a>&nbsp; Mon profil</li>
        <a href="{{ path('defi_liste_sports') }}"><li><i class="fa fa-gamepad"></i>&nbsp; Défis tes amis</li></a>
        <li><a href="#"><i class="fa fa-trophy"></i></a>&nbsp; Trophées</li>
        <li><a href="#"><i class="fa fa-users"></i></a>&nbsp; Communauté</li>
    </div>

    <!-- Fonction Javascript pour l'affichage des barres du Burger -->
    <a href="javascript:void(0)" class="icon">
        <div class="hamburger">
            <div class="menui top-menu"></div>
            <div class="menui mid-menu"></div>
            <div class="menui bottom-menu"></div>
        </div>
    </a>

    <h1>GoGame</h1>

    <div class="row">
        {% for listesport in listesport %}
        <div class="col-xs-4">
            <a href="{{ path('defi_liste_users') }}"><img class="images_defi" src="{{ listesport.imagesport }}" alt="Image sport" /></a>
            {{ listesport.nomsport }}
        </div>
        {% endfor %}
    </div>

{% endblock %}

<!-- Appel des scripts -->
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src="{{ asset('bundles/defi/js/index.js') }}"></script>
